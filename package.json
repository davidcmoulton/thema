{
  "name": "@stencila/thema",
  "version": "0.1.0",
  "description": "Semantic themes for use with encoda (https://github.com/stencila/encoda)",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "parcel ./src/demo/index.html --open",
    "build": "parcel build ./src/themes/**/*.css ./src/themes/**/*.ts",
    "pages": "parcel build ./src/demo/index.html -d pages",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/thema.git"
  },
  "keywords": [
    "Stencila",
    "document",
    "theme",
    "CSS"
  ],
  "author": "Stencila",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/thema/issues"
  },
  "homepage": "https://github.com/stencila/thema#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.7",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@stencila/dev-config": "git+https://github.com/stencila/dev-config.git",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-url-loader": "git+https://github.com/stencila/parcel-plugin-url-loader.git",
    "prettier": "1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-release": "^15.13.12",
    "typescript": "^3.5.1"
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "dependencies": {
    "normalize.css": "^8.0.1",
    "prismjs": "^1.16.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
